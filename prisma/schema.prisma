datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Coin {
  id     Int        @id @default(autoincrement())
  cg_id  String     @unique
  name   String
  symbol String?
  users  UserCoin[]
}

model User {
  id         Int        @id @default(autoincrement())
  t_id       Int        @unique
  username   String?
  first_name String?
  last_name  String?
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  language   String?
  coins      UserCoin[]
}

model UserCoin {
  id      Int              @id @default(autoincrement())
  user    User             @relation(fields: [user_id], references: [id])
  user_id Int
  coin    Coin             @relation(fields: [coin_id], references: [id])
  coin_id Int
  actions UserCoinAction[]
}

model Action {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  usercoins UserCoinAction[]
}

model UserCoinAction {
  id          Int      @id @default(autoincrement())
  usercoin    UserCoin @relation(fields: [usercoin_id], references: [id])
  usercoin_id Int
  action      Action   @relation(fields: [action_id], references: [id])
  action_id   Int
  is_active   Boolean
  limit_value Float
}
